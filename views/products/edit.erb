<form method="post" action="/products/<%= @product.id %>">

  <label for="book-name">Title:</label>
  <input type="text" name="book_name" id="book-name" value="<%= @product.book_name %>" />

  <label for="author">Author:</label>
  <input type="text" name="author" id="author" value="<%= @product.author %>" />

  <label for="genre">Select a Genre:</label>
  <select class="genre" name="genre">
    <% for genre in @genres %>
      <option value="<%= genre %>" <%= "selected" if @product.genre == genre %>><%= genre %></option>
    <% end %>
  </select>

  <label for="description">Book Details:</label>
  <input type="text" name="description" id="description" value="<%= @product.description %>" />

  <label for="supplier-name">Supplier:</label>
  <select name="supplier_id" id="supplier-name">
    <% for supplier in @suppliers %>
      <option value="<%= supplier.id %>"><%= supplier.name %></option>
    <% end %>
  </select>

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" id="quantity" value="<%= @product.quantity %>" />

  <label for="wholesale-price">Wholesale Cost: £</label>
  <input type="text" name="wholesale_price" id="wholesale-price" value="<%= @product.wholesale_price %>" />

  <label for="retail-price">Retail: £</label>
  <input type="text" name="retail_price" id="retail-price" value="<%= @product.retail_price %>" />

  <input type="submit" value="Edit Details">
</form>
